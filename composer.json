{
    "name": "totten/pogo",
    "description": "Run PHP scripts with inline dependencies",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "require": {
        "php": ">=7.1.8",
        "symfony/console": "~4.0",
        "symfony/yaml": "~4.0",
        "civicrm/composer-downloads-plugin": "~3.0",
        "symfony/filesystem": "~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "Pogo\\": "src/"
         }
    },
    "bin": [
        "bin/pogo.php"
    ],
    "config": {
        "platform": {
            "php": "7.1.8"
        },
        "bin-dir": "bin",
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        }
    },
    "extra": {
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.16.0/box.phar",
                "path": "bin/box",
                "type": "phar"
            }
        }
    }
}
